# Production Environment Variables
# Copy this file to .env.production and update with your actual values
# IMPORTANT: Use strong, unique values for all secrets in production

# Application
NODE_ENV=production
APP_NAME=YourAppName
APP_URL=https://yourdomain.com

# API Configuration
API_BASE_URL=https://yourdomain.com/api
API_TIMEOUT=10000

# Database (if applicable)
DATABASE_URL=postgresql://user:password@production-db-host:5432/dbname
REDIS_URL=redis://production-redis-host:6379

# Authentication
JWT_SECRET=use-a-very-strong-secret-key-here-minimum-32-characters
AUTH_COOKIE_NAME=auth-token
AUTH_COOKIE_MAX_AGE=86400
AUTH_COOKIE_SECURE=true
AUTH_COOKIE_SAME_SITE=strict

# Third-party Services
STRIPE_SECRET_KEY=sk_live_your_stripe_live_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
SENDGRID_API_KEY=your-production-sendgrid-api-key
AWS_ACCESS_KEY_ID=your-production-aws-access-key
AWS_SECRET_ACCESS_KEY=your-production-aws-secret-key
AWS_REGION=us-east-1

# OAuth (if applicable)
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret
GITHUB_CLIENT_ID=your-production-github-client-id
GITHUB_CLIENT_SECRET=your-production-github-client-secret

# Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXX-Y
MIXPANEL_TOKEN=your-production-mixpanel-token
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Feature Flags
ENABLE_DEBUG_MODE=false
ENABLE_API_LOGGING=false
ENABLE_PERFORMANCE_MONITORING=true

# Logging
LOG_LEVEL=error
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# CORS
CORS_ORIGIN=https://yourdomain.com
CORS_CREDENTIALS=true

# Security
HELMET_CSP_DIRECTIVES=default-src 'self'
SESSION_SECRET=another-very-strong-secret-key-here
ENCRYPTION_KEY=yet-another-strong-encryption-key
